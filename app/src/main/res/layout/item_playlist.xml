<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/marginTop_16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp">
    <ImageView
        style="@style/iconPlayListStyle"
        android:id="@+id/IconPlayList"
        tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/playerTextView"
        android:id="@+id/NamePlayList"
        android:layout_width="@dimen/width_160dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12sp"
        android:textStyle="bold"
        android:text="Best song 2021" />

    <TextView
        style="@style/countTrackTextView"
        android:id="@+id/descriptionPlayList"
        android:textSize="@dimen/text_size_12sp"
        android:textStyle="bold"
        android:text="98 треков" />
</LinearLayout>