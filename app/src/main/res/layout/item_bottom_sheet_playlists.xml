<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/pading_8dp"
    android:paddingTop="@dimen/pading_8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="2dp">
    <ImageView
        android:id="@+id/playlistCover"
        android:layout_width="@dimen/layout_width_45dp"
        android:layout_height="@dimen/layout_height_45dp"
        android:scaleType="centerCrop"
        android:src="@drawable/newplaceholder" />
</androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/titlePlayList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Song 2021"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/ys_display_regular"/>
        <TextView
            android:id="@+id/trackCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="98 Треков"
            android:textSize="11sp"
            android:layout_marginStart="8dp"
            android:textColor="#AEAFB4" />

    </LinearLayout>

</LinearLayout>